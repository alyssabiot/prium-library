<div class="container">
  <h1><%= @book.title %></h1>
  <div class="block">
    <p>Author : <%= @book.author %></p>
    <p>Abstract : <%= @book.abstract %></p>

    <!-- if borrowed, link to user -->
    <% if @book.state == "Borrowed" %>
      <p>State : Borrowed by <%= link_to @book.user.first_name + " " + @book.user.last_name, user_path(@book.user) %></p>
    <% else %>
      <p>State : Available</p>
    <% end %>

    <!-- delete book only if no bookings -->
    <% if @book.booking.blank? %>
      <%= link_to "Update book", edit_book_path(@book) %> | <%= link_to "Delete book", book_path(@book), method: :delete, :data => {:confirm => 'Are you sure?'} %>
    <% else %>
      <%= link_to "Update book", edit_book_path(@book) %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="form-container">
        <h4>Add a new book</h4>
        <%= simple_form_for @book do |f| %>
          <%= f.input :title %>
          <%= f.input :author %>
          <%= f.input :abstract %>
          <%= f.submit class: "btn btn-warning"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
